@model Ejemplos.Models.Peliculas

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container w-50 p-5 mt-2 mb-5 bg-white rounded">
    <h3>Editar</h3>

    <hr />
    <div class="row">
        <div class="col">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Titulo" class="control-label"></label>
                    <input asp-for="Titulo" class="form-control" />
                    <span asp-validation-for="Titulo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Año" class="control-label"></label>
                    <input asp-for="Año" class="form-control" />
                    <span asp-validation-for="Año" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Duracion" class="control-label"></label>
                    <input asp-for="Duracion" class="form-control" />
                    <span asp-validation-for="Duracion" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <br />
    <div>
        <a asp-action="Index">Regresar</a>
    </div>
</div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
