@model IEnumerable<Ejemplos.Models.Peliculas>

@{
    ViewData["Title"] = "CRUD";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-white">Peliculas</h1>


<div class="container-fluid w-auto p-3 bg-white rounded">
    <p>
        <a class="btn btn-primary" asp-action="Create"><i class="fas fa-plus"></i></a>
    </p>
    <div class="row">
        <div class="col">
            <table id="example" class="table table-striped table-bordered dt-responsive nowrap" style="width:100%">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Titulo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Año)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Duracion)
                        </th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Titulo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Año)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Duracion)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-info"><i class="far fa-edit"></i></a> |&nbsp; 
                                <!-- <a asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-info"></i></a> | -->
                                <!-- <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger"><i class="far fa-trash-alt"></i></a> -->
                                <a onclick="deleteConfirm(@item.Id)" class="btn btn-outline-danger"><i class="far fa-trash-alt"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<br />
<br />

<script src="~/js/CRUD.js" asp-append-version="true"></script>